@import '../../../../styles/vars.styl'

.wrapper
  display flex
  flex-direction column
  align-items center
  height 150px
  background-color var(--background-color)
  border 1px solid var(--background-front-color)
  border-radius 28px
  border-bottom-left-radius 0
  border-bottom-right-radius 0
  box-shadow 0 -6px 35px -25px var(--blackout-color)

  @media (min-width $medium-width)
    height auto
    align-items end

.smallLifeGrid
  display grid
  grid-template-columns repeat(52, 1fr)
  gap 1px
  width 100%
  max-width 100%
  transform scale(0.85)

  @media (min-width $medium-width)
    transform none

.week
  aspect-ratio 1 / 1
  width 100%
  border-radius 2px
  background-color var(--default-week-bg-color)
  border 1px solid var(--week-future-color)
  transition border-color 0.2s, box-shadow 0.2s