.wrapper
  padding: 16px
  display: flex
  flex-direction: column
  gap: 16px
  height: 100%
  overflow-y: auto

.themePreview
  width 100%
  height 100%
  display flex
  align-items center
  justify-content center
  gap 4px

.colorDot
  width 12px
  height 12px
  border-radius 50%
  border 1.5px solid #222
  box-shadow 0 0 2px rgba(0,0,0,0.12)

.iconWrap
  margin-left 4px
  display flex
  align-items center
  justify-content center