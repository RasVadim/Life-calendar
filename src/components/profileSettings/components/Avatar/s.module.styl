.avatarWrap
  display flex
  align-items center
  gap 16px
  margin-bottom 24px

.avatarCircle
  width 64px
  height 64px
  border-radius 50%
  background #444
  display flex
  align-items center
  justify-content center
  overflow hidden

.avatarImg
  width 100%
  height 100%
  object-fit cover
  border-radius 50%

.avatarStub
  font-size 32px
  color #fff

.avatarInfo
  display flex
  flex-direction column

.avatarName
  font-size 20px
  font-weight 600
  color #fff

.avatarEmail
  font-size 14px
  color #aaa 