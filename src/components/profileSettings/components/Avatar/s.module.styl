.avatarWrap
  display flex
  flex-direction column
  align-items center
  margin-bottom 20px
  margin-top 12px

.avatarCircle
  width 100px
  height 100px
  border-radius 50%
  background var(--avatar-bg-color)
  display flex
  align-items center
  justify-content center
  overflow hidden
  margin-bottom 8px

.avatarImg
  width 100%
  height 100%
  object-fit cover
  border-radius 50%

.avatarStub
  font-size 32px
  color var(--contrast-color)

.avatarInfo
  display flex
  flex-direction column
  align-items center

.avatarName
  font-size 18px
  font-weight 600
  color var(--contrast-color)
  margin-bottom 0

.avatarEmail
  font-size 13px
  color var(--secondary-color)
  margin-bottom 6px