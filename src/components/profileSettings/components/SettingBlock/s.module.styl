.settingBlock
  display flex
  align-items center
  gap 14px
  width 100%
  padding 16px 0
  background none
  border none
  outline none
  cursor pointer
  font-size 16px
  color #fff
  transition background 0.15s
  border-radius 12px
  text-align left

  &:hover
    background rgba(255,255,255,0.04)

.icon
  font-size 22px
  width 28px
  display flex
  align-items center
  justify-content center

.title
  flex 1 