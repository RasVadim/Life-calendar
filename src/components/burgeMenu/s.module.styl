.wrapper
  width 30px
  height 30px
  padding 5px 0

  nav
    width 100%
    height 100%
    background-color var(--background-front-color)
    display flex
    justify-content flex-start

.menuButton
  height 100%
  width 30px
  display flex
  flex-direction column
  align-items flex-start
  justify-content space-between
  cursor pointer
  padding-left 15px
  z-index 100

.buttonStick
  width 25px
  height 2px
  background-color var(--menu-accent-color)
  border-radius 20%
  transform rotate(0) translate(0)
  transition cubic-bezier(0.175, 0.885, 0.32, 1.275) 0.5s

.menuBackground
  width 100%
  height 100vh
  background-color var(--blackout-color)
  position absolute
  top 0
  left 0
  z-index 50
  opacity 50%
  animation 0.5s show ease
  animation-fill-mode forwards

  @keyframes show
    from
      opacity 0

    to
      opacity 50%

.menu
  display flex
  flex-direction column
  width 65%
  height 100vh
  padding 50px 10px
  background-color var(--background-color)
  position absolute
  top 0
  left 0
  z-index 90
  box-shadow 0 0 25px 20px rgba(0, 0, 0, 0.1)
  opacity 97%
  animation 0.3s showMenu ease
  animation-fill-mode forwards

  @keyframes showMenu
    from
      transform translateX(-100%)
      opacity 30%

    to
      transform translateX(0)
      opacity 97%

  /* ------------- sliding menu ------------------ */

.hidden
  animation 0.5s hide ease
  animation-fill-mode forwards

  @keyframes hide
    from
      display flex
        opacity 50%

    to
      opacity 0
      display none
      z-index 0

/* ----- animations--------- */
/* opening */
.buttonStick.open:nth-child(1)
  transform rotate(45deg) translate(-2px, 10px) scale(0.5)
  transition ease-in 0.5s

.buttonStick.open:nth-child(2)
  transform scale(0.01)
  transition ease-out 0.5s

.buttonStick.open:nth-child(3)
  transform rotate(135deg) translate(-3px, 15px) scale(0.5)
  transition ease 0.5s