.wrapper
  nav
    width 100%
    height 3em
    background-color #242424
    display flex
    justify-content flex-start
    padding 0.6rem 1em

.menuButton
  height 100%
  width 3em
  display flex
  flex-direction column
  align-items flex-start
  justify-content space-between
  cursor pointer

.buttonStick
  width 3em
  height 0.2em
  background-color rgb(0, 183, 255)
  border-radius 0.5em
  transform rotate(0) translate(0)
  transition cubic-bezier(0.175, 0.885, 0.32, 1.275) 0.5s

.menu
  width 50%
  height 100vh
  background-color rgb(154, 181, 240)
  position absolute
  top 0
  z-index -1 /* ------------- sliding menu ------------------ */

.hidden
  display none

/* ----- animations--------- */
/* opening */
.buttonStick.open:nth-child(1)
  transform rotate(45deg) translate(0.45em, 0.75em) scale(0.5)
  transition ease-out 0.5s

.buttonStick.open:nth-child(2)
  transform scale(0.01)
  transition ease-out 0.5s

.buttonStick.open:nth-child(3)
  transform rotate(135deg) translate(-0.47em, 0.83em) scale(0.5)
  transition ease-out 0.5s