.container
  grid-area header
  padding 0 13px
  width 100vw

.header
  display flex
  justify-content space-between
  align-items center
  padding 6px 10px
  border-radius 40px
  box-shadow 0 2px 25px -16px rgba(0, 0, 0, 0.1)
  font-family 'Montserrat', sans-serif
  font-size 15px
  background var(--background-front-color)
  color var(--contrast-color)