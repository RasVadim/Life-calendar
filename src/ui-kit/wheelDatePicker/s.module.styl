.container {
  display: flex;
  width: 180px;
  -webkit-mask-image: linear-gradient(
    to bottom,
    transparent 0%,
    black 50%,
    transparent 100%
  );
  mask-image: linear-gradient(
    to bottom,
    transparent 0%,
    black 50%,
    transparent 100%
  );
  position: relative;
}

.container::after {
  position: absolute;
  content: "";
  top: 50%;
  transform: translateY(-50%);
  left: 0;
  right: 0;
  width: 100%;
  height: 32px;

  background: var(--wheel-picker-bg-color);
  border-radius: 5px;
  pointer-events: none;
  z-index: -1;
}