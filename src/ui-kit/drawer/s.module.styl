.drawerWrap
  position fixed
  left 0
  bottom 0
  width 100vw
  height 95dvh
  background-color var(--background-color)
  opacity 0.97
  border-top-left-radius 24px
  border-top-right-radius 24px
  box-shadow 0 -4px 24px rgba(0, 0, 0, 0.15)
  z-index 150
  display flex
  flex-direction column
  animation 0.23s showDrawer cubic-bezier(0.4, 0, 0.2, 1)
  animation-fill-mode forwards
  will-change transform, opacity
  transform translateY(100%)

.drawerHeader
  padding 16px 16px 0
  text-align center
  display flex
  justify-content space-between

.drawerTitle
  display flex
  justify-content center
  font-size 13px
  font-weight 600
  color var(--text-color)

.drawerContent
  flex 1
  overflow auto
  padding: 5px 15px;

.drawerBlackout
  position fixed
  left 0
  top 0
  width 100vw
  height 100vh
  background-color var(--blackout-color)
  opacity 0
  z-index 120
  pointer-events none
  transition opacity 0.2s cubic-bezier(0.4, 0, 0.2, 1)
  will-change opacity

.drawerBlackout.isOpen
  opacity 0.45
  pointer-events auto

.hidden
  animation 0.2s hideDrawer cubic-bezier(0.4, 0, 0.2, 1)
  animation-fill-mode forwards
  pointer-events none

@keyframes showDrawer
  from
    transform translateY(100%)
    opacity 0.3

  to
    transform translateY(0)
    opacity 0.97

@keyframes hideDrawer
  from
    opacity 0.45
    display flex

  to
    opacity 0
    display none
    z-index 0