.container
  display flex
  justify-content center
  align-items center
  width 100%
  margin-top 16px
  margin-bottom 16px

.trackContainer
  display flex
  flex-direction row
  align-items center
  justify-content center
  text-align center
  height 30px
  background-color #272729
  border-radius 40px

.tab
  display flex
  align-items center
  justify-content center
  height 16px
  flex 1
  background-color transparent
  border none
  border-right 1px solid #646368
  border-radius 40px

  &:focus, &:active
    outline none
    box-shadow none

.tab:last-child
  background-color transparent
  border none

.selected
  display flex
  align-items center
  justify-content center
  height 100%
  flex 1
  background-color #646368
  border none
  border 3px solid #272729
  border-radius 40px

  &:focus, &:active
    outline none
    box-shadow none

.text
  font-family -apple-system, system-ui, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif
  font-size 13px
  font-weight 600
  letter-spacing 0.4px
  color #FFFFFF
  text-decoration none
  margin 0
  padding 5px 20px
  cursor pointer