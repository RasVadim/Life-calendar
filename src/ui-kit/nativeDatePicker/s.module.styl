.wrap
  display flex
  justify-content center
  text-align left
  width 100%
  flex-direction column
  align-items center
  position relative

.label
  margin-bottom 8px
  font-size 16px
  color var(--text-color)

.input
  font-size 16px
  padding 8px 14px
  margin-bottom 15px
  border-radius 22px
  border 1.5px solid var(--contrast-color)
  box-sizing border-box
  width 200px
  background var(--background-front-color)
  color var(--contrast-color)
  transition border-color 0.2s

  &::placeholder
    color var(--non-active-color)
    opacity 1

  &:focus
    border-color var(--primary-color)
    outline none

.inputDefault
  color var(--text-color) !important
  border-color var(--text-color) !important

.confirmButton
  position absolute
  left 50%
  top: 60px;
  transform translate(-50%, 0)
  z-index 2
  transition opacity 0.4s, transform 0.4s
  opacity 1

.confirmButtonHidden
  opacity 0
  transform translate(-50%, 20px)
  pointer-events none