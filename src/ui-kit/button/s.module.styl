.button
  color white
  height 34px
  border none
  display flex
  align-items center
  background-color var(--primary-color)
  padding 2px 12px
  border-radius 22px
  will-change transform, background-color 
  transition background-color 0.1s ease

  &.onlyIcon
    width 28px
    height 28px
    padding 4px
    border-radius 50%
    justify-content center

    svg
      width 18px
      height 18px

.small
  height 24px

  &.onlyIcon
    width 24px
    height 24px
    padding 3px

    svg
      width 16px
      height 16px

.large
  height 44px

  &.onlyIcon
    width 44px
    height 44px
    padding 6px

    svg
      width 24px
      height 24px

.active
  color white

.disabled
  color var(--disabled-color)

.gost
  background transparent

.label
  font-size 12px
  text-align center
  padding 0 5px

.contentWrapper
  display flex
  align-items center

  &.leftWrapper
    flex-direction row

  &.rightWrapper
    flex-direction row-reverse

  & .label
    position absolute
    right 12px
    white-space nowrap
    opacity 0

  & .activeLabel
    opacity 1

  & .hiddenLabel
    opacity 0
    font-size 12px
    text-align center
    padding 0 5px

.hidden
  opacity 0